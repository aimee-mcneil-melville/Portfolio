---
  import '../styles/styles.scss';
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" style="scroll-behavior: smooth";>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
    --background: 17,29,74;
		--accent: 120, 139, 255;
		--accent-light: 191, 215,  255;
		--accent-dark: 84, 101, 255;
    --accent-bold: 253, 232, 173;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent-dark)),
			rgb(var(--accent)) 30%,
			white 70%
		);
    --bg-gradient: linear-gradient(
      black,
      rgb(var(--background)) 70%
		);

--neon-indigo: 71, 10, 255;
--neon-blue: 51, 153, 255;
--neon-green: 119, 251, 0;
--neon-orange: 250, 171, 0;
--neon-yellow: 254, 255, 0;
--neon-pink: 244, 0, 255;
	}
	html {
		font-family: monospace, sans-serif;
		background: rgb(var(--background));
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

  /* icon colours */

[data-icon] {
  font-size: 1.5rem;
}

</style>
